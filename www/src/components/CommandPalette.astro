---
// Command Palette Component
---

<div class="command-palette" id="commandPalette">
	<div class="command-palette-content">
		<div class="command-search">
			<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<circle cx="11" cy="11" r="8"></circle>
				<path d="m21 21-4.35-4.35"></path>
			</svg>
			<input type="text" placeholder="Quick navigation..." id="commandInput" />
			<button class="command-close" id="commandClose">ESC</button>
		</div>
		<div class="command-list">
			<a href="#features" class="command-item" data-cmd="f">
				<span class="command-icon">✨</span>
				<span>Features</span>
				<span class="command-shortcut">F</span>
			</a>
			<a href="#how-it-works" class="command-item" data-cmd="h">
				<span class="command-icon">⚙️</span>
				<span>How it Works</span>
				<span class="command-shortcut">H</span>
			</a>
			<a href="#testimonials" class="command-item" data-cmd="t">
				<span class="command-icon">💬</span>
				<span>Testimonials</span>
				<span class="command-shortcut">T</span>
			</a>
			<a href="#waitlist" class="command-item" data-cmd="w">
				<span class="command-icon">🚀</span>
				<span>Join Waitlist</span>
				<span class="command-shortcut">W</span>
			</a>
			<a href="https://github.com" target="_blank" class="command-item" data-cmd="g">
				<span class="command-icon">💻</span>
				<span>GitHub Repository</span>
				<span class="command-shortcut">G</span>
			</a>
		</div>
	</div>
</div>
<div class="command-backdrop" id="commandBackdrop"></div>

<style>
	.command-palette {
		position: fixed;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%) scale(0.95);
		width: 90%;
		max-width: 640px;
		background: white;
		border-radius: var(--radius-lg);
		box-shadow: 0 20px 80px rgba(0, 0, 0, 0.2);
		z-index: 10001;
		opacity: 0;
		visibility: hidden;
		transition: all var(--transition-fast);
	}

	.command-palette.active {
		opacity: 1;
		visibility: visible;
		transform: translate(-50%, -50%) scale(1);
	}

	.command-backdrop {
		position: fixed;
		inset: 0;
		background: rgba(0, 0, 0, 0.6);
		backdrop-filter: blur(4px);
		z-index: 10000;
		opacity: 0;
		visibility: hidden;
		transition: all var(--transition-fast);
	}

	.command-backdrop.active {
		opacity: 1;
		visibility: visible;
	}

	.command-palette-content {
		padding: var(--spacing-sm);
	}

	.command-search {
		display: flex;
		align-items: center;
		gap: var(--spacing-sm);
		padding: var(--spacing-sm) var(--spacing-md);
		border-bottom: 1px solid var(--color-border-light);
		margin-bottom: var(--spacing-sm);
	}

	.command-search svg {
		color: var(--color-text-light);
		flex-shrink: 0;
	}

	.command-search input {
		flex: 1;
		border: none;
		outline: none;
		font-size: 1rem;
		color: var(--color-text);
		background: transparent;
	}

	.command-search input::placeholder {
		color: var(--color-text-light);
	}

	.command-close {
		padding: 0.25rem 0.625rem;
		background: var(--color-border-light);
		border: none;
		border-radius: 4px;
		font-size: 0.75rem;
		font-weight: 600;
		color: var(--color-text-muted);
		cursor: pointer;
		transition: all var(--transition-fast);
	}

	.command-close:hover {
		background: var(--color-border);
	}

	.command-list {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
		max-height: 400px;
		overflow-y: auto;
		padding: 0 var(--spacing-sm);
		padding-bottom: var(--spacing-sm);
	}

	.command-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-sm);
		padding: var(--spacing-sm) var(--spacing-md);
		border-radius: var(--radius-sm);
		text-decoration: none;
		color: var(--color-text);
		transition: all var(--transition-fast);
		cursor: pointer;
	}

	.command-item:hover {
		background: var(--gradient-accent);
		transform: translateX(4px);
	}

	.command-icon {
		font-size: 1.25rem;
		flex-shrink: 0;
	}

	.command-item > span:nth-child(2) {
		flex: 1;
		font-size: 0.9375rem;
		font-weight: 500;
	}

	.command-shortcut {
		padding: 0.25rem 0.5rem;
		background: var(--color-border-light);
		border-radius: 4px;
		font-size: 0.75rem;
		font-weight: 600;
		color: var(--color-text-muted);
		font-family: var(--font-mono), monospace;
	}
</style>

