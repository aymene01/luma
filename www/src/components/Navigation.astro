// Navigation Component
---

<nav class="nav" id="main-nav">
	<div class="nav-progress"></div>
	<div class="container">
		<div class="nav-content">
			<a href="/" class="logo">
				<svg class="logo-icon" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
					<circle cx="20" cy="20" r="18" stroke="currentColor" stroke-width="2"/>
					<circle cx="20" cy="20" r="8" fill="currentColor"/>
					<circle cx="12" cy="15" r="3" fill="currentColor" opacity="0.6"/>
					<circle cx="28" cy="15" r="3" fill="currentColor" opacity="0.6"/>
					<circle cx="20" cy="8" r="3" fill="currentColor" opacity="0.4"/>
				</svg>
				<span class="logo-text">Luma</span>
			</a>
			<div class="nav-links">
				<a href="#features">Features</a>
				<a href="#how-it-works">How it Works</a>
				<a href="#testimonials">Testimonials</a>
				<a href="#faq">FAQ</a>
				<a href="https://github.com" target="_blank" rel="noopener" class="nav-github">
					<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
