---
// Trust Signals Component
---

<section class="trust-signals">
	<div class="container-narrow">
		<p class="trust-label">Backed by innovators, built for humans</p>
		<div class="trust-logos">
			<div class="trust-logo">Y Combinator</div>
			<div class="trust-logo">Product Hunt</div>
			<div class="trust-logo">Hacker News</div>
			<div class="trust-logo">TechCrunch</div>
		</div>
	</div>
</section>

<style>
	.trust-signals {
		padding: var(--spacing-2xl) 0;
		background: white;
		border-bottom: 1px solid var(--color-border-light);
	}

	.trust-label {
		text-align: center;
		font-size: 0.8125rem;
		font-weight: 600;
		color: var(--color-text-light);
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: var(--spacing-md);
	}

	.trust-logos {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: var(--spacing-xl);
		flex-wrap: wrap;
	}

	.trust-logo {
		font-size: 1rem;
		font-weight: 600;
		color: var(--color-text-muted);
		opacity: 0.6;
		transition: opacity var(--transition-base);
	}

	.trust-logo:hover {
		opacity: 1;
	}

	@media (max-width: 480px) {
		.trust-logos {
			flex-direction: column;
			gap: var(--spacing-sm);
		}
	}
</style>

