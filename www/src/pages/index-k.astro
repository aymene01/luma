	/* ===============================================
	   COMMAND PALETTE
	   =============================================== */
	.command-palette {
		position: fixed;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%) scale(0.95);
		width: 90%;
		max-width: 640px;
		background: white;
		border-radius: var(--radius-lg);
		box-shadow: 0 20px 80px rgba(0, 0, 0, 0.2);
		z-index: 10001;
		opacity: 0;
		visibility: hidden;
		transition: all var(--transition-fast);
	}

	.command-palette.active {
		opacity: 1;
		visibility: visible;
		transform: translate(-50%, -50%) scale(1);
	}

	.command-backdrop {
		position: fixed;
		inset: 0;
		background: rgba(0, 0, 0, 0.6);
		backdrop-filter: blur(4px);
		z-index: 10000;
		opacity: 0;
		visibility: hidden;
		transition: all var(--transition-fast);
	}

	.command-backdrop.active {
		opacity: 1;
		visibility: visible;
	}

	.command-palette-content {
		padding: var(--spacing-sm);
	}

	.command-search {
		display: flex;
		align-items: center;
		gap: var(--spacing-sm);
		padding: var(--spacing-sm) var(--spacing-md);
		border-bottom: 1px solid var(--color-border-light);
		margin-bottom: var(--spacing-sm);
	}

	.command-search svg {
		color: var(--color-text-light);
		flex-shrink: 0;
	}

	.command-search input {
		flex: 1;
		border: none;
		outline: none;
		font-size: 1rem;
		color: var(--color-text);
		background: transparent;
	}

	.command-search input::placeholder {
		color: var(--color-text-light);
	}

	.command-close {
		padding: 0.25rem 0.625rem;
		background: var(--color-border-light);
		border: none;
		border-radius: 4px;
		font-size: 0.75rem;
		font-weight: 600;
		color: var(--color-text-muted);
		cursor: pointer;
		transition: all var(--transition-fast);
	}

	.command-close:hover {
		background: var(--color-border);
	}

	.command-list {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
		max-height: 400px;
		overflow-y: auto;
		padding: 0 var(--spacing-sm);
		padding-bottom: var(--spacing-sm);
	}

	.command-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-sm);
		padding: var(--spacing-sm) var(--spacing-md);
		border-radius: var(--radius-sm);
		text-decoration: none;
		color: var(--color-text);
		transition: all var(--transition-fast);
		cursor: pointer;
	}

	.command-item:hover {
		background: var(--gradient-accent);
		transform: translateX(4px);
	}

	.command-icon {
		font-size: 1.25rem;
		flex-shrink: 0;
	}

	.command-item > span:nth-child(2) {
		flex: 1;
		font-size: 0.9375rem;
		font-weight: 500;
	}

	.command-shortcut {
		padding: 0.25rem 0.5rem;
		background: var(--color-border-light);
		border-radius: 4px;
		font-size: 0.75rem;
		font-weight: 600;
		color: var(--color-text-muted);
		font-family: var(--font-mono), monospace;
	}

	/* ===============================================
	   CURSOR SPOTLIGHT
	   =============================================== */
	.cursor-spotlight {
		position: fixed;
		width: 600px;
		height: 600px;
		border-radius: 50%;
		background: radial-gradient(circle, rgba(255, 107, 88, 0.08) 0%, transparent 70%);
		pointer-events: none;
		z-index: 9998;
		transform: translate(-50%, -50%);
		transition: opacity 0.3s ease;
		opacity: 0;
	}

	@media (hover: hover) and (pointer: fine) {
		.cursor-spotlight {
			opacity: 1;
		}
	}

	/* ===============================================
	   ENHANCED BUTTON MICRO-INTERACTIONS
	   =============================================== */
	.btn-primary {
		position: relative;
		overflow: hidden;
	}

	.btn-primary::before {
		content: '';
		position: absolute;
		top: 50%;
		left: 50%;
		width: 0;
		height: 0;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.3);
		transform: translate(-50%, -50%);
		transition: width 0.6s, height 0.6s;
	}

	.btn-primary:hover::before {
		width: 300px;
		height: 300px;
	}

	.btn-primary:active {
		transform: scale(0.97);
	}

	.btn:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
	}

	.btn:active {
		transform: translateY(0);
	}

	/* ===============================================
	   HERO VISUAL / MOCKUP
	   =============================================== */
	.hero-visual {
		position: relative;
		height: 600px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.hero-mockup {
		position: relative;
		width: 100%;
		max-width: 540px;
	}

	.mockup-window {
		background: white;
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow-xl);
		overflow: hidden;
		border: 1px solid var(--color-border-light);
	}

	.mockup-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem;
		border-bottom: 1px solid var(--color-border-light);
		background: #FAFAFA;
	}

	.mockup-dots {
		display: flex;
		gap: 6px;
	}

	.mockup-dots span {
		width: 10px;
		height: 10px;
		border-radius: 50%;
	}

	.mockup-dots span:nth-child(1) { background: #FF5F56; }
	.mockup-dots span:nth-child(2) { background: #FFBD2E; }
	.mockup-dots span:nth-child(3) { background: #27C93F; }

	.mockup-title {
		font-weight: 600;
		font-size: 0.875rem;
		color: var(--color-text-muted);
	}

	.mockup-content {
		display: flex;
		height: 400px;
	}

	.mockup-sidebar {
		width: 72px;
		background: #FAFAFA;
		border-right: 1px solid var(--color-border-light);
		padding: 1rem 0.75rem;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.sidebar-item {
		width: 100%;
		height: 48px;
		background: white;
		border-radius: var(--radius-md);
		border: 1px solid var(--color-border-light);
		transition: var(--transition-base);
	}

	.sidebar-item.active {
		background: var(--color-accent-pale);
		border-color: var(--color-accent);
	}

	.mockup-main {
		flex: 1;
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.message-item {
		height: 72px;
		background: #FAFAFA;
		border-radius: var(--radius-md);
		animation: shimmer 2s ease-in-out infinite;
	}

	.message-item:nth-child(2) {
		animation-delay: 0.3s;
	}

	.message-item:nth-child(3) {
		animation-delay: 0.6s;
	}

	@keyframes shimmer {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.5; }
	}

	.mockup-float {
		position: absolute;
		width: 64px;
		height: 64px;
		background: white;
		border-radius: var(--radius-md);
