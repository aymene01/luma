	/* ===============================================
	   PROBLEM SECTION
	   =============================================== */
	.section-problem {
		background: var(--gradient-subtle);
	}

	.problem-visual {
		max-width: 600px;
		margin: 0 auto;
	}

	.chaos-container {
		position: relative;
		height: 400px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.chaos-notification {
		position: absolute;
		background: white;
		border-radius: var(--radius-md);
		box-shadow: var(--shadow-md);
		padding: 1rem;
		display: flex;
		gap: 0.75rem;
		width: 280px;
		animation: chaosFloat 4s ease-in-out infinite;
	}

	.chaos-notification:nth-child(1) {
		top: 5%;
		left: 10%;
	}

	.chaos-notification:nth-child(2) {
		top: 30%;
		right: 5%;
	}

	.chaos-notification:nth-child(3) {
		bottom: 30%;
		left: 5%;
	}

	.chaos-notification:nth-child(4) {
		bottom: 5%;
		right: 10%;
	}

	@keyframes chaosFloat {
		0%, 100% {
			transform: translateY(0) rotate(0deg);
		}
		50% {
			transform: translateY(-15px) rotate(2deg);
		}
	}

	.notification-icon {
		width: 40px;
		height: 40px;
		border-radius: 8px;
		flex-shrink: 0;
	}

	.notification-icon.red { background: #FF5F56; }
	.notification-icon.blue { background: #4A90E2; }
	.notification-icon.green { background: #7ED321; }
	.notification-icon.purple { background: #BD10E0; }

	.notification-content {
		flex: 1;
		height: 40px;
		background: #F5F5F5;
		border-radius: 4px;
	}

	.chaos-overlay {
		position: absolute;
		inset: 0;
		background: radial-gradient(circle, transparent 30%, white 100%);
		pointer-events: none;
	}

